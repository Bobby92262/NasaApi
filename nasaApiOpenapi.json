{
  "openapi": "3.0.0",
  "info": {
    "title": "NASA APOD Wrapper",
    "version": "1.0.0",
    "description": "A public API that retrieves NASA's Astronomy Picture of the Day."
  },
  "paths": {
    "/apod/today": {
      "get": {
        "summary": "Get today's Astronomy Picture of the Day",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APOD"
                }
              }
            }
          },
          "500": {
            "description": "NASA API error or server failure"
          }
        }
      }
    },
    "/apod/date": {
      "get": {
        "summary": "Get APOD for a specific date",
        "parameters": [
          {
            "name": "date",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Date in YYYY-MM-DD format"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APOD"
                }
              }
            }
          },
          "500": {
            "description": "NASA API error or server failure"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "APOD": {
        "type": "object",
        "properties": {
          "date": { "type": "string", "format": "date" },
          "title": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "explanation": { "type": "string" },
          "media_type": { "type": "string" }
        },
        "required": ["date", "title", "url", "explanation"]
      }
    }
  }
}

